<?xml version="1.0"?>
<!--
  Right arm module (3 DOF): shoulder pan/lift, elbow flex.
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="sensei_arm_right" params="parent">
    <link name="r_shoulder_link">
      <inertial>
        <mass value="0.3"/>
        <origin xyz="0 0 -0.02" rpy="0 0 0"/>
        <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
      </inertial>
      <visual>
        <origin xyz="0 0 -0.02" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.035"/>
        </geometry>
        <material name="arm_red">
          <color rgba="0.8 0.2 0.2 1.0"/>
        </material>
      </visual>
      <visual>
        <origin xyz="0 0 -0.02" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.02" length="0.04"/>
        </geometry>
        <material name="arm_red">
          <color rgba="0.8 0.2 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 -0.02" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.035"/>
        </geometry>
      </collision>
    </link>

    <joint name="r_shoulder_pan" type="revolute">
      <origin xyz="0 -0.09 0.18" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child link="r_shoulder_link"/>
      <axis xyz="0 0 1"/>
      <limit lower="-1.4" upper="1.4" effort="8" velocity="2.0"/>
    </joint>

    <link name="r_upper_arm_link">
      <inertial>
        <mass value="0.4"/>
        <origin xyz="0 0 -0.06" rpy="0 0 0"/>
        <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
      </inertial>
      <visual>
        <origin xyz="0 0 -0.06" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.025" length="0.12"/>
        </geometry>
        <material name="arm_red">
          <color rgba="0.8 0.2 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 -0.06" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.025" length="0.12"/>
        </geometry>
      </collision>
    </link>

    <joint name="r_shoulder_lift" type="revolute">
      <origin xyz="0 0 -0.04" rpy="0 0 0"/>
      <parent link="r_shoulder_link"/>
      <child link="r_upper_arm_link"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.2" upper="1.2" effort="8" velocity="2.0"/>
    </joint>

    <link name="r_forearm_link">
      <inertial>
        <mass value="0.3"/>
        <origin xyz="0 0 -0.055" rpy="0 0 0"/>
        <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
      </inertial>
      <visual>
        <origin xyz="0 0 -0.055" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.022" length="0.11"/>
        </geometry>
        <material name="arm_red">
          <color rgba="0.8 0.2 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 -0.055" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.022" length="0.11"/>
        </geometry>
      </collision>
    </link>

    <joint name="r_elbow_flex" type="revolute">
      <origin xyz="0 0 -0.12" rpy="0 0 0"/>
      <parent link="r_upper_arm_link"/>
      <child link="r_forearm_link"/>
      <axis xyz="0 1 0"/>
      <limit lower="-2.0" upper="0.0" effort="6" velocity="2.0"/>
    </joint>

    <link name="r_hand_link">
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 -0.02" rpy="0 0 0"/>
        <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.0004"/>
      </inertial>
      <visual>
        <origin xyz="0.02 0 -0.02" rpy="0 0 0"/>
        <geometry>
          <box size="0.06 0.04 0.03"/>
        </geometry>
        <material name="hand_red">
          <color rgba="0.55 0.15 0.15 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.02 0 -0.02" rpy="0 0 0"/>
        <geometry>
          <box size="0.06 0.04 0.03"/>
        </geometry>
      </collision>
    </link>

    <joint name="r_hand_fixed" type="fixed">
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
      <parent link="r_forearm_link"/>
      <child link="r_hand_link"/>
    </joint>
  </xacro:macro>
</robot>
