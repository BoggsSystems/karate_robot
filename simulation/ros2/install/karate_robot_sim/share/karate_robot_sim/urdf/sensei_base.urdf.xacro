<?xml version="1.0"?>
<!--
  Base module for 1-foot Sensei robot.
  Compact torso with mounting frames for limbs and head.
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="sensei_base" params="base_link">
    <link name="${base_link}">
      <inertial>
        <mass value="1.2"/>
        <origin xyz="0 0 0.07" rpy="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0.07" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.06" length="0.14"/>
        </geometry>
        <material name="torso_gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.07" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.06" length="0.14"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>
</robot>
