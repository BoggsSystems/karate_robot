<?xml version="1.0"?>
<!--
  Right leg module (3 DOF): hip pitch, knee pitch, ankle pitch.
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="sensei_leg_right" params="parent">
    <link name="r_hip_link">
      <inertial>
        <mass value="0.7"/>
        <origin xyz="0 0 -0.07" rpy="0 0 0"/>
        <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.004"/>
      </inertial>
      <visual>
        <origin xyz="0 0 -0.07" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.03" length="0.14"/>
        </geometry>
        <material name="leg_orange">
          <color rgba="0.9 0.5 0.2 1.0"/>
        </material>
      </visual>
      <collision name="r_hip_collision">
        <origin xyz="0 0 -0.07" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.03" length="0.14"/>
        </geometry>
      </collision>
    </link>

    <joint name="r_hip_pitch" type="revolute">
      <origin xyz="0 -0.06 0.06" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child link="r_hip_link"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.2" upper="1.2" effort="10" velocity="2.0"/>
    </joint>

    <link name="r_thigh_link">
      <inertial>
        <mass value="0.6"/>
        <origin xyz="0 0 -0.06" rpy="0 0 0"/>
        <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
      </inertial>
      <visual>
        <origin xyz="0 0 -0.06" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.028" length="0.12"/>
        </geometry>
        <material name="leg_orange">
          <color rgba="0.9 0.5 0.2 1.0"/>
        </material>
      </visual>
      <collision name="r_thigh_collision">
        <origin xyz="0 0 -0.06" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.028" length="0.12"/>
        </geometry>
      </collision>
    </link>

    <joint name="r_knee_pitch" type="revolute">
      <origin xyz="0 0 -0.14" rpy="0 0 0"/>
      <parent link="r_hip_link"/>
      <child link="r_thigh_link"/>
      <axis xyz="0 1 0"/>
      <limit lower="-2.0" upper="0.0" effort="10" velocity="2.0"/>
    </joint>

    <link name="r_shin_link">
      <inertial>
        <mass value="0.3"/>
        <origin xyz="0 0 -0.03" rpy="0 0 0"/>
        <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
      </inertial>
      <visual>
        <origin xyz="0 0 -0.03" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.025" length="0.06"/>
        </geometry>
        <material name="leg_orange">
          <color rgba="0.9 0.5 0.2 1.0"/>
        </material>
      </visual>
      <collision name="r_shin_collision">
        <origin xyz="0 0 -0.03" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.025" length="0.06"/>
        </geometry>
      </collision>
    </link>

    <joint name="r_ankle_pitch" type="revolute">
      <origin xyz="0 0 -0.12" rpy="0 0 0"/>
      <parent link="r_thigh_link"/>
      <child link="r_shin_link"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.8" upper="0.8" effort="6" velocity="2.0"/>
    </joint>

    <link name="r_foot_link">
      <inertial>
        <mass value="0.2"/>
        <origin xyz="0 0 -0.015" rpy="0 0 0"/>
        <inertia ixx="0.0008" ixy="0" ixz="0" iyy="0.0008" iyz="0" izz="0.0008"/>
      </inertial>
      <visual>
        <origin xyz="0.05 0 -0.015" rpy="0 0 0"/>
        <geometry>
          <box size="0.1 0.04 0.03"/>
        </geometry>
        <material name="foot_black">
          <color rgba="0.1 0.1 0.1 1.0"/>
        </material>
      </visual>
      <collision name="r_foot_collision">
        <origin xyz="0.05 0 -0.015" rpy="0 0 0"/>
        <geometry>
          <box size="0.1 0.04 0.03"/>
        </geometry>
      </collision>
    </link>

    <joint name="r_foot_fixed" type="fixed">
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
      <parent link="r_shin_link"/>
      <child link="r_foot_link"/>
    </joint>

    <gazebo reference="r_foot_link">
      <sensor name="right_foot_contact" type="contact">
        <contact>
          <collision>r_foot_collision</collision>
        </contact>
        <update_rate>100</update_rate>
        <visualize>false</visualize>
      </sensor>
    </gazebo>
  </xacro:macro>
</robot>
