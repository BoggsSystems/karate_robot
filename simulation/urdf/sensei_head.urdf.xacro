<?xml version="1.0"?>
<!--
  Head module (2 DOF): neck pan, neck tilt.
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="sensei_head" params="parent">
    <link name="neck_link">
      <inertial>
        <mass value="0.2"/>
        <origin xyz="0 0 0.03" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0.03" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.025" length="0.06"/>
        </geometry>
        <material name="head_silver">
          <color rgba="0.7 0.7 0.8 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.03" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.025" length="0.06"/>
        </geometry>
      </collision>
    </link>

    <joint name="neck_pan" type="revolute">
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child link="neck_link"/>
      <axis xyz="0 0 1"/>
      <limit lower="-1.0" upper="1.0" effort="3" velocity="2.0"/>
    </joint>

    <link name="head_link">
      <inertial>
        <mass value="0.5"/>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.065"/>
        </geometry>
        <material name="head_white">
          <color rgba="0.9 0.9 0.9 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.065"/>
        </geometry>
      </collision>
    </link>

    <joint name="neck_tilt" type="revolute">
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <parent link="neck_link"/>
      <child link="head_link"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.8" upper="0.8" effort="3" velocity="2.0"/>
    </joint>
  </xacro:macro>
</robot>
