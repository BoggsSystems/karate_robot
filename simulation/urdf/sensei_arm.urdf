<?xml version="1.0"?>
<!--
  7-DOF humanoid arm for simulation.
  Bushido note: physical truth grounds the imagined motion.
-->
<robot name="sensei_arm">
  <link name="base_link">
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- 14-bit joint limits are represented in radians in simulation. -->
  <link name="link_1">
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="shoulder_pan" type="revolute">
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="link_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" effort="50" velocity="1.5"/>
  </joint>

  <link name="link_2">
    <inertial>
      <mass value="1.1"/>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="shoulder_lift" type="revolute">
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <parent link="link_1"/>
    <child link="link_2"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="50" velocity="1.5"/>
  </joint>

  <link name="link_3">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.12" rpy="0 0 0"/>
      <inertia ixx="0.008" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.008"/>
    </inertial>
  </link>

  <joint name="upper_arm_roll" type="revolute">
    <origin xyz="0 0 0.24" rpy="0 0 0"/>
    <parent link="link_2"/>
    <child link="link_3"/>
    <axis xyz="1 0 0"/>
    <limit lower="-2.0944" upper="2.0944" effort="40" velocity="2.0"/>
  </joint>

  <link name="link_4">
    <inertial>
      <mass value="0.9"/>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <inertia ixx="0.006" ixy="0" ixz="0" iyy="0.006" iyz="0" izz="0.006"/>
    </inertial>
  </link>

  <joint name="elbow_flex" type="revolute">
    <origin xyz="0 0 0.34" rpy="0 0 0"/>
    <parent link="link_3"/>
    <child link="link_4"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.3562" upper="0.0" effort="35" velocity="2.0"/>
  </joint>

  <link name="link_5">
    <inertial>
      <mass value="0.7"/>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.004"/>
    </inertial>
  </link>

  <joint name="forearm_roll" type="revolute">
    <origin xyz="0 0 0.42" rpy="0 0 0"/>
    <parent link="link_4"/>
    <child link="link_5"/>
    <axis xyz="1 0 0"/>
    <limit lower="-2.0944" upper="2.0944" effort="25" velocity="2.5"/>
  </joint>

  <link name="link_6">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
    </inertial>
  </link>

  <joint name="wrist_flex" type="revolute">
    <origin xyz="0 0 0.50" rpy="0 0 0"/>
    <parent link="link_5"/>
    <child link="link_6"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="15" velocity="3.0"/>
  </joint>

  <link name="link_7">
    <inertial>
      <mass value="0.4"/>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <joint name="wrist_roll" type="revolute">
    <origin xyz="0 0 0.56" rpy="0 0 0"/>
    <parent link="link_6"/>
    <child link="link_7"/>
    <axis xyz="1 0 0"/>
    <limit lower="-2.0944" upper="2.0944" effort="10" velocity="3.0"/>
  </joint>
</robot>
